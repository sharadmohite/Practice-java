class ReverseStr 
{ 
public static void main(String[] args) 
{ 
String str="racar"; 
char[] carr=str.toCharArray(); 
String rev=""; 
for(int i=carr.length-1;i>=0;i--) 
{ 
rev+=carr[i]; 
} 
if(str.equals(rev))
{
   System.out.println("it is palindrome"); 
} 
else
{
    System.out.println("it is not a palindrome");
}
}
} 
